<Window x:Class="_03_HomeWork_Fix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_HomeWork_Fix"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top">
                <Button Click="getProducts">Get Products</Button>
                <Button Margin="1,0,0,0" Click="getSuppliers">Get Suppliers</Button>
                <Button Margin="1,0,0,0" Click="createProduct">Create Product</Button>
                <Button Margin="1,0,0,0" Click="createSupplier">Create Supplier</Button>
                <Button Margin="1,0,0,0" Click="updateProduct">Update Product</Button>
                <Button Margin="1,0,0,0" Click="deleteProduct">Delete Product</Button>
                <Button Margin="1,0,0,0" Click="updateSupplier">Update Supplier</Button>
                <Button Margin="1,0,0,0" Click="deleteSupplier">Delete Supplier</Button>
            </ToolBar>
            <DataGrid DockPanel.Dock="Top" Name="dataGrid">
            </DataGrid>
            
        </DockPanel>
    </Grid>
</Window>
